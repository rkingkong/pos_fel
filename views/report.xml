<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_ticket" model="report.paperformat">
            <field name="name">Ticket</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">215</field>
            <field name="page_width">75</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">3</field>
            <field name="dpi">130</field>
        </record>

        <record id="action_reporte_ticket" model="ir.actions.report">
            <field name="name">Ticket</field>
            <field name="model">pos.order</field>
            <field name="binding_model_id" ref="model_pos_order"/>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">pos_fel.report_pos_order_ticket</field>
            <field name="report_file">pos_fel.report_pos_order_ticket</field>
            <field name="paperformat_id" ref="paperformat_ticket"/>
        </record>

    </data>
</odoo>
